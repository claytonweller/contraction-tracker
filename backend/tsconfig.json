{
  "compilerOptions": {
    "target": "esnext",
    "rootDir": "app",
    "outDir": "dist",
    "module": "commonjs",
    "noEmitHelpers": false,
    "inlineSourceMap": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "types": [
      "@types/jest",
      "jest",
      "node"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "include": [
    "app"
  ]
}