{
  "compilerOptions": {
    "target": "esnext",
    "rootDir": "app",
    "outDir": "dist",
    "module": "commonjs",
    "noEmitHelpers": false,
    "inlineSourceMap": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "app"
  ],
  "exclude": [
    "app/types/**/*"
  ]
}